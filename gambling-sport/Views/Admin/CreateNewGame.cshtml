@model gambling_sport.Models.ViewModels.SportGameModel

<div>new game</div>

<form asp-action="CreateGame" asp-controller="Admin" method="post">
    <div>
        <label>Gamename : </label>
        <input name="Gamename" type="text" />
    </div>
    <div>
        <label>Description : </label>
        <input name="Description" type="text" />
    </div>
    <div>
        <label>Host Teamname : </label>
        <input name="HostTeamname" type="text" />
    </div>
    <div>
        <label>Host Win Rate : </label>
        <input name="HostWinRate" type="number" min="0.00" max="99.00" step="0.01"/>
    </div>
    <div>
        <label>Guest Teamname : </label>
        <input name="GuestTeamname" type="text" />
    </div>
    <div>
        <label>Guest Win Rate : </label>
        <input name="GuestWinRate" type="number" min="0.00" max="99.00" step="0.01" />
    </div>
    <input type="submit" />
</form>